<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nestedScrollView"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ptit.store.view.order.OrderActivity"
    tools:showIn="@layout/activity_order">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/fab_margin_8dp"
    android:paddingBottom="48dp">
   <TextView
       android:textStyle="bold"
       android:textSize="@dimen/font_size_20sp"
       android:text="@string/about_order_customer"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:drawableLeft="@drawable/ic_customer_order"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fab_margin"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_customer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_customer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Họ và tên người nhận"
                android:textSize="@dimen/font_size_14sp"
                android:layout_marginBottom="@dimen/margin_bottom"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_customer_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_customer_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Điện thoại"
                android:inputType="phone"
                android:textSize="@dimen/font_size_14sp"
                android:layout_marginBottom="@dimen/margin_bottom"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_customer_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_customer_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Địa chỉ giao hàng"
                android:textSize="@dimen/font_size_14sp"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:textStyle="bold"
        android:textSize="@dimen/font_size_20sp"
        android:text="Hình thức thanh toán"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_choise_order"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fab_margin"
            android:orientation="vertical">
            <RadioGroup
                android:id="@+id/rg_choise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/rd_choise_direct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thanh toán trực tiếp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:backgroundTint="@color/cardview_dark_background"/>
                <RadioButton
                    android:id="@+id/rd_choise_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thanh toán Online"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:backgroundTint="@color/cardview_dark_background"/>
            </RadioGroup>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:textStyle="bold"
        android:textSize="@dimen/font_size_20sp"
        android:text="Thông tin đơn hàng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_cart_order"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fab_margin"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rc_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fab_margin"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_total_price"
                android:text="Tổng đơn hàng: 1000.000.000 đ"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:gravity="end"/>
            <TextView
                android:id="@+id/tv_price_ship"
                android:text="Phí vận chuyển: 1000.000 đ"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginBottom="@dimen/margin_bottom"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginBottom="@dimen/view_margin" />
            <TextView
                android:id="@+id/tv_total_order"
                android:text="Tổng thanh toán: 1000.000 đ"
                android:textColor="@color/md_red_500"
                android:textSize="@dimen/font_size_20sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fab_margin"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_edit_text"
                android:hint="nhập mã code..."
                android:layout_weight="1"
                android:padding="8dp"
                android:layout_marginRight="@dimen/margin_bottom"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="Áp dụng"
                android:textColor="@color/md_white_1000"
                android:background="@drawable/background_button"
                android:layout_weight="3"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>
